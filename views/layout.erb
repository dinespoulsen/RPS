<!doctype html>
<html>
    <head>
      <meta charset="utf-8">
      <title>Rock Paper Scissors</title>
        <link href="styles.css" rel="stylesheet" type="text/css" />
    </head>
  <body>

    <div class="wrapper">
      <header>
        <div class="logo">
          <h1>ROCK | PAPER => Scissors</h1>
        </div>

        <% if !@game.nil? %>
        <div class="scoreboard">
          <ul >
            <li><%= @game.player.wins %> -</li>
            <li><%= @game.opponent.wins %></li>
          </ul>
        </div>
        <% end %>
      </header
    </div>
        <%= yield %>
        <footer>
          <p>Poulsen Gaming</p>
        </footer>
    </div>
  </body>
</html>
